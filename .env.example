# Database (PostgreSQL)
DATABASE_URL=postgres://user:pass@host:5432/db

# Backend (Hono API)
NODE_ENV=development
PORT=4000

# origin frontend (Next.js)
CORS_ORIGIN=http://localhost:3000

# Cookie
COOKIE_DOMAIN=
COOKIE_SAMESITE=Lax
COOKIE_SECURE=

# Session TTL (detik)
ADMIN_SESSION_TTL_SEC=28800
VOTER_SESSION_TTL_SEC=7200

# Redis (wajib untuk rate limit multi-instance)
REDIS_URL=redis://localhost:6379
RATE_LIMIT_REDIS_PREFIX=e-pilketos:rl

# Rate limit
RATE_LIMIT_LOGIN_WINDOW_SEC=60
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_TOKEN_LOGIN_WINDOW_SEC=60
RATE_LIMIT_TOKEN_LOGIN_MAX=20
RATE_LIMIT_VOTE_WINDOW_SEC=30
RATE_LIMIT_VOTE_MAX=5

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
